{
  "name": "mrdamian",
  "productName": "mrdamian",
  "version": "1.0.0",
  "description": "Mr.Damian is a platform for streaming assistant tool",
  "main": "src/main.ts",
  "type": "module",
  "module": "es2022",
  "scripts": {
    "start": "run-p start:**",
    "start:frontend": "bun build  --watch --minify --outdir=./static/ frontend/index.tsx",
    "start:backend": "bun run --watch --bun bin/main.ts",
    "start:lint": "#biome lint --watch # non exists lint watch, find some solution.",
    "build": "run-s build:frontend build:backend",
    "build:frontend": "NODE_ENV=production bun build  --minify --outdir=./static/ frontend/index.tsx",
    "build:backend": "NODE_ENV=production bun build  --compile --minify bin/main.ts",
    "test": "bun test",
    "lint": "biome lint",
    "format": "biome format --write",
    "check": "biome check --write"
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.1",
    "@microsoft/api-extractor": "^7.47.0",
    "@twurple/api": "^7.1.0",
    "@twurple/auth": "^7.1.0",
    "@twurple/chat": "^7.1.0",
    "@twurple/eventsub-ws": "^7.1.0",
    "@types/bun": "^1.1.4",
    "@types/express": "^4.17.21",
    "@types/license-checker": "^25.0.6",
    "@types/node": "^20.14.4",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/web": "^0.0.149",
    "bun": "^1.1.13",
    "bun-plugin-server-components": "^0.0.1-alpha.0",
    "license-checker": "^25.0.1",
    "npm-run-all2": "^6.2.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
