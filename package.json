{
  "name": "mrdamian",
  "productName": "mrdamian",
  "version": "1.0.0",
  "description": "Mr.Damian is a platform for streaming assistant tool",
  "main": "src/main.ts",
  "type": "module",
  "module": "es2022",
  "scripts": {
    "start": "run-p 'start:**'",
    "start:backend": "bun run --hot --bun bin/main.ts",
    "start:frontend:html": "mkdir -p static/ && cp frontend/index.html static/index.html",
    "start:frontend:bundle": "bun build  --watch --minify --outdir=./static/ frontend/index.tsx",
    "start:frontend:tmp_panel_js": "bun build  --minify --outdir=./static/component/panel component/panel/root.tsx",
    "start:frontend:tmp_panel_tw": "tailwindcss --watch -o static/component/panel/index.css -i component/panel/index.css",
    "start:frontend:tailwind": "tailwindcss --watch -o static/index.css -i frontend/index.css",
    "start:test": "bun --watch test",
    "start:type": "tsc --noEmit --watch",
    "start:lint": "bun run lint",
    "build": "run-s build:license build:frontend build:backend",
    "build:license": "NODE_ENV=production bun run --bun bin/license.ts",
    "build:frontend": "run-p 'build:frontend:**'",
    "build:frontend:html": "mkdir -p static/ && cp frontend/index.html static/index.html",
    "build:frontend:bundle": "NODE_ENV=production bun build  --minify --outdir=./static/ frontend/index.tsx",
    "build:frontend:tailwind": "tailwindcss -i frontend/index.css -o ./static/index.css",
    "build:backend": "NODE_ENV=production bun build  --compile --minify bin/main.ts",
    "test": "bun test",
    "type": "tsc --noEmit",
    "lint": "biome lint",
    "format": "biome format --write",
    "check": "biome check --write"
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.1",
    "@microsoft/api-extractor": "^7.47.0",
    "@twurple/api": "^7.1.0",
    "@twurple/auth": "^7.1.0",
    "@twurple/chat": "^7.1.0",
    "@twurple/eventsub-ws": "^7.1.0",
    "@types/bun": "^1.1.4",
    "@types/express": "^4.17.21",
    "@types/libnpmsearch": "^2.0.7",
    "@types/license-checker": "^25.0.6",
    "@types/node": "^20.14.4",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/web": "^0.0.149",
    "bun": "^1.1.13",
    "daisyui": "^4.12.2",
    "license-checker": "^25.0.1",
    "npm-run-all2": "^6.2.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.4.5"
  },
  "keywords": [],
  "author": {
    "name": "yuniruyuni",
    "email": "yuniruyuni@gmail.com"
  },
  "license": "MIT",
  "dependencies": {
    "clsx": "^2.1.1",
    "dayjs": "^1.11.11",
    "deepl-node": "^1.13.0",
    "deepmerge": "^4.3.1",
    "express": "^4.19.2",
    "hono": "^4.4.7",
    "in-queue": "^1.2.1",
    "jexpr": "^1.0.0-pre.9",
    "json5": "^2.2.3",
    "libnpmsearch": "^7.0.6",
    "live-plugin-manager": "^1.0.0",
    "open": "^10.1.0"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "^4.18.0"
  }
}
