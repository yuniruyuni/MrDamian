{
  "name": "mrdamian",
  "productName": "mrdamian",
  "license": "MIT",
  "version": "0.0.11",
  "description": "Mr.Damian is a platform for streaming assistant tool",
  "main": "src/main.ts",
  "type": "module",
  "module": "es2022",
  "keywords": [],
  "author": {
    "name": "yuniruyuni",
    "email": "yuniruyuni@gmail.com"
  },
  "scripts": {
    "prepublishOnly": "bun run build",
    "start": "run-p 'start:**' start:frontend:panel",
    "start:backend": "bun run --hot --bun bin/main.ts",
    "start:frontend:static": "bun run --bun bin/build/static.ts",
    "start:frontend:bundle": "bun build  --watch --sourcemap=inline --outdir=static/ frontend/index.tsx",
    "start:frontend:tailwind": "tailwindcss --watch -o static/index.css -i frontend/index.css",
    "start:frontend:panel": "run-s start:frontend:panel:mkdir start:frontend:panel:run",
    "start:frontend:panel:mkdir": "mkdir -p ./module/panel/dist",
    "start:frontend:panel:run": "run-p 'start:frontend:panel:run:**'",
    "start:frontend:panel:run:bundle": "bun build --watch --sourcemap=inline --outdir=./module/panel/dist/ ./module/panel/index.tsx",
    "start:frontend:panel:run:tailwind": "tailwindcss --watch -c ./tailwind.config.js -i ./module/panel/index.css -o ./module/panel/dist/index.css",
    "start:frontend:panel:run:html": "cp ./module/panel/index.html ./module/panel/dist/index.html",
    "start:test": "bun --watch test",
    "start:type": "tsc --noEmit --watch",
    "start:lint": "bun run lint",
    "build": "run-s build:license build:frontend build:backend build:package",
    "build:license": "NODE_ENV=production bun run --bun bin/build/license.ts",
    "build:frontend": "run-p 'build:frontend:**' build:frontend:panel",
    "build:frontend:html": "bun run bin/build/static.ts",
    "build:frontend:bundle": "NODE_ENV=production bun build --minify --outdir=./static/ frontend/index.tsx",
    "build:frontend:tailwind": "tailwindcss -i frontend/index.css -o ./static/index.css",
    "build:frontend:panel": "run-s build:frontend:panel:mkdir build:frontend:panel:run",
    "build:frontend:panel:mkdir": "mkdir -p ./module/panel/dist",
    "build:frontend:panel:run": "run-p 'build:frontend:panel:run:**'",
    "build:frontend:panel:run:bundle": "NODE_ENV=production bun build --minify --outdir=./module/panel/dist/ ./module/panel/index.tsx",
    "build:frontend:panel:run:tailwind": "bunx tailwindcss -c ./tailwind.config.js -i ./module/panel/index.css -o ./module/panel/dist/index.css",
    "build:frontend:panel:run:html": "cp ./module/panel/index.html ./module/panel/dist/index.html",
    "build:backend": "run-p 'build:backend:**'",
    "build:backend:windows-x64": "NODE_ENV=production bun build  --compile --minify --target=bun-windows-x64 --outfile=build/windows-x64.exe bin/main.ts",
    "build:backend:windows-arm64": "echo 'there are no building method for windows-arm64 target yet'",
    "build:backend:mac-x64": "NODE_ENV=production bun build --compile --minify --target=bun-darwin-x64 --outfile=build/mac-x64 bin/main.ts",
    "build:backend:mac-arm64": "NODE_ENV=production bun build --compile --minify --target=bun-darwin-arm64 --outfile=build/mac-arm64 bin/main.ts",
    "build:backend:linux-x64": "NODE_ENV=production bun build --compile --minify --target=bun-linux-x64 --outfile=build/linux-x64 bin/main.ts",
    "build:backend:linux-arm64": "NODE_ENV=production bun build --compile --minify --target=bun-linux-x64 --outfile=build/linux-arm64 bin/main.ts",
    "build:package": "bun run bin/build/package.ts",
    "test": "bun test",
    "type": "tsc --noEmit",
    "lint": "biome lint",
    "format": "biome format --write",
    "check": "biome check --write"
  },
  "dependencies": {
    "@twurple/api": "^7.2.1",
    "@twurple/auth": "^7.2.1",
    "@twurple/chat": "^7.2.1",
    "@twurple/eventsub-ws": "^7.2.1",
    "clsx": "^2.1.1",
    "dayjs": "^1.11.13",
    "deepl-node": "^1.15.0",
    "deepmerge": "^4.3.1",
    "hono": "^4.6.14",
    "itty-router": "^5.0.18",
    "jexpr": "^1.0.0-pre.9",
    "json5": "^2.2.3",
    "libnpmsearch": "^7.0.6",
    "live-plugin-manager": "^1.0.0",
    "mrdamian-plugin": "^0.0.20",
    "open": "^10.1.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "swr": "^2.3.0",
    "wouter": "^3.3.5"
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "@microsoft/api-extractor": "^7.48.1",
    "@types/bun": "^1.1.14",
    "@types/express": "^4.17.21",
    "@types/libnpmsearch": "^2.0.7",
    "@types/license-checker": "^25.0.6",
    "@types/node": "^20.17.10",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "@types/web": "^0.0.188",
    "bun": "^1.1.40",
    "daisyui": "^4.12.23",
    "license-checker": "^25.0.1",
    "npm-run-all2": "^6.2.6",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.2"
  },
  "trustedDependencies": ["@biomejs/biome", "bun"]
}
