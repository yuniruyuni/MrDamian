{
  params: {
    message: "hello, world",
    target: "ja",
  },
  pipeline: [
    {
      type: "deepl",
      action: "detect",
      args: {
        message: "$ message",
      }
    },
    {
      when: "deepl.detect !== 'ja'",
      type: "deepl",
      action: "translate",
      args: {
        message: "$ message",
        source: "$ deepl.detect",
        target: "$ target"
      }
    }
  ]
}
